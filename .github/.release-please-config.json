{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "go",
  "include-v-in-tag": true,
  "include-component-in-tag": true,
  "separate-pull-requests": true,
  "tag-separator": "@",
  "changelog-sections": [
    {
      "type": "feat",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "Bug Fixes",
      "hidden": false
    }
  ],
  "packages": {
    ".": {
      "component": "trogonerror"
    }
  },
  "plugins": [
    {
      "type": "sentence-case"
    }
  ]
}
